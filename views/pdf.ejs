    } */

.pdf-container {
  width: 100%;
  height: 100%;
  background-color: #333;
  display: flex;
  justify-content: center;
  align-items: center;
}



    /* iframe {
      width: 100%;
      height: 100%;
      border: none;
    } */
     iframe {
  width: 100%;
  height: 100%;
  border: none;
  /* allows mobile pinch zoom */
   touch-action: pan-x pan-y pinch-zoom;
  overflow: auto;
  -ms-content-zooming: zoom;
}

    /* Download button fixed at bottom-right */
    .download-btn {
      position: fixed;
      bottom: 20px;
      right: 20px;
      padding: 12px 20px;
      background-color: #1e88e5;
      color: white;
      text-decoration: none;
      font-weight: bold;
      border-radius: 8px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
      transition: background 0.3s, transform 0.2s;
      z-index: 1000;
      /* ensures button is above iframe */
    }

    .download-btn:hover {
      background-color: #1565c0;
      transform: scale(1.05);
    }

    @media (max-width: 650px) {
      .download-btn {
          font-size: small;
        padding: 9px 6px;
        bottom: 20px;
        right: 3px;
      }
    }
  </style>
</head>

<body>
  <div class="pdf-container">
    <!-- <iframe src="<%# srcLink %>" allowfullscreen></iframe> -->
       <iframe 
   src="<%= srcLink %>"
    allow="fullscreen"
    allowfullscreen
     style="width:100%; height:100%; border:none;" 
  ></iframe>

  </div>
  <!-- Download button -->
  <a class="download-btn" href="<%= downloadLink %>" download>
    Download Pdf
  </a>
</body>

</html>